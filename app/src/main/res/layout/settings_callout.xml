<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_callout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#D9D9D9">

    <TextView
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:id="@+id/alphaLabel"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical|left"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/alphaStepperMinus"
        />

    <Button
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:id="@+id/alphaStepperMinus"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@id/alphaLabel"
        />
    <Button
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:id="@+id/alphaStepperPlus"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="+"
        app:layout_constraintStart_toEndOf="@id/alphaStepperMinus"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:text="Pan/Resize Photo"
        android:id="@+id/panResizeButton"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alphaLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</android.support.constraint.ConstraintLayout>